<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/imageFrag">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:id="@+id/prevButton" />

    <Button
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton" />

    <Button
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/removeButton" />

    <TextView android:textColor="#fff" android:textSize="20dp"
        android:layout_height="wrap_content" android:id="@+id/test"
        android:text="Hi There" android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal" android:paddingTop="10dp"
        android:paddingBottom="10dp"></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        />
</LinearLayout>